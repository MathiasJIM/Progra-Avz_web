@page
@model Web.Pages.Usuario.UsuariosAdminModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Administración de Usuarios";
}

<div class="container mt-5">
    <h2 class="mb-4">Administración de Usuarios</h2>
    <a class="btn btn-primary mb-4" asp-page="/Acceso/Registro">Registrar Usuario</a>

    <!-- Tabs para diferentes roles -->
    <ul class="nav nav-tabs" id="roleTabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="admin-tab" data-toggle="tab" href="#admin" role="tab" aria-controls="admin" aria-selected="true">Administradores</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="teacher-tab" data-toggle="tab" href="#teacher" role="tab" aria-controls="teacher" aria-selected="false">Profesores</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="student-tab" data-toggle="tab" href="#student" role="tab" aria-controls="student" aria-selected="false">Estudiantes</a>
        </li>
    </ul>




@*     DESCOMENTAR CON CTRL K U CUANDO SE IMPLEMENTE LA LOGICA *@




@*     <!-- Contenido de los tabs -->
    <div class="tab-content" id="roleTabsContent">
        <div class="tab-pane fade show active" id="admin" role="tabpanel" aria-labelledby="admin-tab">
            <!-- Tabla para Administradores -->
            @RenderUserTable(Model.Administradores)
        </div>
        <div class="tab-pane fade" id="teacher" role="tabpanel" aria-labelledby="teacher-tab">
            <!-- Tabla para Profesores -->
            @RenderUserTable(Model.Profesores)
        </div>
        <div class="tab-pane fade" id="student" role="tabpanel" aria-labelledby="student-tab">
            <!-- Tabla para Estudiantes -->
            @RenderUserTable(Model.Estudiantes)
        </div>
    </div>
</div>

@functions {
    private IHtmlContent RenderUserTable(IEnumerable<Usuario> usuarios)
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped shadow">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Correo Electrónico</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in usuarios)
                    {
                        <tr>
                            <td>@usuario.NombreCompleto</td>
                            <td>@usuario.CorreoElectronico</td>
                            <td>
                                <a asp-page="/Usuario/EditarUsuario" asp-route-id="@usuario.ID" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
} *@

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
