@page
@model Web.Pages.Acceso.LoginModel
@{
}

<section class="vh-100" >
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card LoginContenedor">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="../images/LoginImage.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form method="post">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="bi bi-boxes" style="font-size: 3rem;color: #ff6219;"></i>
                                        <span class="h3 fw-bold px-3 mb-0">Patinaje Castillo</span>
                                        
                                    </div> 

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Inicie sesión con su cuenta</h5>

                                    <div class="form-outline mb-4">
                                        <input type="email" asp-for="LoginInfo.CorreoElectronico" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="LoginInfo.CorreoElectronico">Dirección de correo</label>
                                        <span asp-validation-for="LoginInfo.CorreoElectronico" class="text-danger"></span>

                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" asp-for="LoginInfo.Contrasenia" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="LoginInfo.Contrasenia">Contraseña</label>
                                        <span asp-validation-for="LoginInfo.Contrasenia" class="text-danger"></span>
                                    </div>
                                    @if (Model.token is not null && Model.token.ValidacionExitosa==false)
                                    {
                                        <div class="alert alert-warning" role="alert">
                                            Credenciales incorrectas!
                                        </div>
                                    }
                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Iniciar Sesión</button>

                                    </div>

                                    <a class="small text-muted" href="#!">Olvidó su contraseña</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        ¿No posee un usuario? <a href="#!"
                                                                 style="color: #393f81;"><a asp-page="./Registro">Registrarse</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Termino de uso.</a>
                                    <a href="#!" class="small text-muted">Política de privacidad</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>