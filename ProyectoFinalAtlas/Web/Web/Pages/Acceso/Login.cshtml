@page
@model Web.Pages.Acceso.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Login"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="~/css/nuevo/login.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <form method="post">
            <h1>ICE CASTLE</h1>
            <div class="input-box">
                <input type="email" asp-for="LoginInfo.CorreoElectronico" id="userName" placeholder="Correo Electronico" required></input>
                <i class='bx bxs-user'></i>
            </div>
            <span asp-validation-for="LoginInfo.CorreoElectronico" class="text-danger"></span>
            <div class="input-box">
                <input type="password" asp-for="LoginInfo.Contrasenia" placeholder="Contraseña" required></input>
                <i class='bx bxs-lock-alt'></i>
            </div>
            <span asp-validation-for="LoginInfo.Contrasenia" class="text-danger"></span>
            <div class="remember-forgot">
                <a href="#">Olvidaste tu Contraseña?</a>
            </div>

            <button type="submit" class="btn">Iniciar Sesion</button>

            <div class="register-link">
                <p>No tienes una cuenta?,<a href="tel:22677111"> llama al 2267-7111</a></p>
            </div>
        </form>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>