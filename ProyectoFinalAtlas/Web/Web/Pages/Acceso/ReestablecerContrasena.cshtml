@page
@model Web.Pages.Acceso.ReestablecerContrasenaModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Reestablecer Contraseña";
}

<h2>Reestablecer Contraseña</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Request.NuevaContraseñaHash">Nueva Contraseña</label>
        <input asp-for="Request.NuevaContraseñaHash" type="password" class="form-control" required>
        <span asp-validation-for="Request.NuevaContraseñaHash" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Request.ConfirmarContrasena">Confirmar Contraseña</label>
        <input asp-for="Request.ConfirmarContrasena" type="password" class="form-control" required>
        <span asp-validation-for="Request.ConfirmarContrasena" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Reestablecer Contraseña</button>
</form>



