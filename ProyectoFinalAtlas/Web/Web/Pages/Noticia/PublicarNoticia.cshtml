@page
@model Web.Pages.Noticia.PublicarNoticiaModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Publicar Noticia";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow">
                <div class="card-header">
                    <h3 class="text-center">Publicar Noticia</h3>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Noticia.Titulo">Título</label>
                            <input asp-for="Noticia.Titulo" class="form-control" type="text" placeholder="Introduce el título aquí...">
                            <span asp-validation-for="Noticia.Titulo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Noticia.Descripcion">Descripción</label>
                            <textarea asp-for="Noticia.Descripcion" class="form-control" placeholder="Escribe la descripción aquí..." rows="4"></textarea>
                            <span asp-validation-for="Noticia.Descripcion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FotoNoticia">Seleccionar Imágenes</label>
                            <div class="custom-file">
                                <input asp-for="FotoNoticia" type="file" class="custom-file-input" id="fotoNoticiaInput" multiple>
                                <label class="custom-file-label" for="fotoNoticiaInput">Elegir archivos...</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Noticia.FechaPublicacion">Fecha de Publicación</label>
                            <input asp-for="Noticia.FechaPublicacion" type="datetime-local" class="form-control" value="@Model.Noticia.FechaPublicacion.ToString("yyyy-MM-ddTHH:mm")">
                            <span asp-validation-for="Noticia.FechaPublicacion" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Publicar Noticia</button>
                            <a asp-page="/Noticia/MisNoticias" class="btn btn-secondary">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#fotoNoticiaInput').on('change', function () {
                var fileName = $(this).val().replace('C:\\fakepath\\', " ");
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
