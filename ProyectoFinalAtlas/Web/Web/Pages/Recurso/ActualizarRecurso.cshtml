@page
@model Web.Pages.Recurso.ActualizarRecursoModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Actualizar Recurso";
}

<h1>Actualizar Recurso</h1>

<form method="post">
    <input type="hidden" asp-for="Recurso.ID" />
    <div class="form-group">
        <label asp-for="Recurso.Titulo">Título</label>
        <input asp-for="Recurso.Titulo" class="form-control" required />
        <span asp-validation-for="Recurso.Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recurso.Descripcion">Descripción</label>
        <textarea asp-for="Recurso.Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Recurso.Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recurso.TipoRecurso">Tipo de Recurso</label>
        <select asp-for="Recurso.TipoRecurso" class="form-control" required>
            <option value="">Seleccione uno...</option>
            <option value="Calentamiento o Estiramiento">Calentamiento o Estiramiento</option>
            <option value="Nutrición Deportiva">Nutrición Deportiva</option>
            <option value="Análisis de Técnica">Análisis de Técnica</option>
            <option value="Rutinas de Entrenamiento">Rutinas de Entrenamiento</option>
        </select>
        <span asp-validation-for="Recurso.TipoRecurso" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recurso.IDNivel">Nivel</label>
        <select asp-for="Recurso.IDNivel" class="form-control" required>
            <option value="">Seleccione el nivel...</option>
            <option value="1">Principiante</option>
            <option value="2">Medio</option>
            <option value="3">Avanzado</option>
        </select>
        <span asp-validation-for="Recurso.IDNivel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recurso.LinkRefuerzo">Link de Refuerzo</label>
        <input asp-for="Recurso.LinkRefuerzo" class="form-control" />
        <span asp-validation-for="Recurso.LinkRefuerzo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Actualizar</button>
</form>
