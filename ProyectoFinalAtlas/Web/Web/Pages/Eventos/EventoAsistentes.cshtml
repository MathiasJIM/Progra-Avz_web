@page
@model Web.Pages.Eventos.EventoAsistentesModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Asistentes del Evento";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Asistentes del Evento</h2>
            <div class="mb-3">
                <a class="btn btn-secondary" asp-page="/Eventos/MisEventos"><i class="fas fa-arrow-left"></i> Volver a Eventos</a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped shadow">
                    <thead class="thead-dark">
                        <tr>
                            <th>Foto</th>
                            <th>Nombre Completo</th>
                            <th>Correo Electrónico</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var asistente in Model.Asistentes)
                        {
                            <tr>
                                <td>
                                    <img src="@(!string.IsNullOrEmpty(asistente.FotoPerfil) ? asistente.FotoPerfil : Url.Content("/images/Perfiles/fotodefault.png"))"
                                         class="img-thumbnail" // Utilizando img-thumbnail para mejorar la presentación
                                         alt="Foto de perfil"
                                         style="width: 100px; height: 100px; object-fit: cover;">
                                </td>
                                <td>@asistente.NombreCompleto</td>
                                <td>@asistente.CorreoElectronico</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
